{% block stylesheets %}
<style>
*{
    margin: 0;
    padding: 0;
    font-family: "Gill Sans", sans-serif; 
}
html {
    scroll-behavior: smooth;
}
.header{
    height: 88vh;
    width: 100%;
    background-image: linear-gradient(rgba(0, 1, 5, 0.571),rgba(109, 68, 49, 0.3)),url(images/4bois4.jpeg);
    background-position: center;
    background-size: cover;
    position: relative;
}
body{
    margin-top: 0;
}
nav{
    display: flex;
    padding: 0% 6%;
    justify-content: space-between;
    align-items: center;   
}
nav img{
    width: 200px;
}
.nav-links{
    flex: 1;
    text-align: right;
    font-weight: bold;
}
.nav-links ul li{
    list-style: none;
    display: inline-block;
    padding: 8px 12px;
    position: relative; 
}
.nav-links ul li a{
    color: #fff;
    text-decoration: none;
    font-size: 13px;
}
.nav-links ul li::after{
    content: '';
    width: 0%;
    height: 2px;
    background: #f44336;
    display: block;
    margin: auto;
    transition: 0.5s;
}
.nav-links ul li:hover::after{
    width: 100%;
}
.text-box{
    width: 90%;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    padding-top: 5%;
    transform: translate(-50%,-50%);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.text-box h1{
    font-size: 62px;
}
.text-box p{
    margin: 10px 0 40px;
    font-size: 20px;
    color: #fff;
}
.text-box a{
    font-size: 16px;
}
.hero-btn{
    display: inline-block;
    text-decoration: none;
    color: #fff;
    border: 1px solid #fe0000;
    padding: 12px 34px;
    font-size: 13px;
    background-color: #fe0000 ;
    /* background: transparent; */
    position: relative;
    cursor: pointer;
}
.hero-btn:hover{
    border: 1px solid #f44336;
    background: #f44336;
    transition: 1s;
}
nav .fa{
    display: none;
} 


/*----------Zone d'ACCUEIL---------*/
.dropdown-content {
    display: none;
    position: absolute;
    background-color: #1d1936;
    min-width: 135px;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    left: -50px; 
    transform: translateX(12px);
    padding: 12px 8px; /* Ajustez le rembourrage */
    margin-top: 8px; /* Ajoutez une marge supérieure pour éloigner vers le bas */ 
}
.dropdown-content a {
    color: #fff;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    text-align: left;
}
.dropdown-content a:hover {
    background-color: #1d1936;
}
.dropdown:hover .dropdown-content {
    display: block;
}


/*-----Description----*/
.description{
    width: 100%;
    margin: auto;
    text-align: center;
    padding-top: 40px;
}
h1{
    font-size: 36px;
    font-weight: 600;
}
p{
    color: #666666;
    font-size: 14px;
    font-weight: 300;
    line-height: 22px;
    padding: 10px;
}
.description .row{
    margin-top: 5%;
    display: flex;
    justify-content: center;
    gap: 5px; 
}
.description-col{
    flex-basis: 20%;
    background: #ffead5;
    background-size: cover;
    border-radius: 10px;
    margin-bottom: 5%;
    height: 310px;
    padding: 20px 12px;
    box-sizing: border-box;
    transition: 0.5s; 
}
h3{
    text-align: center;
    font-weight: 600;
    margin: 10px 0;
}
.description-col:hover{
      box-shadow: 0 0 15px 5px rgba(4, 37, 75, 0.37); 
    transition: box-shadow 0.3s ease-in-out;
}



/*-----Nos valeurs----*/
.valeur{
    display: flex;
    align-items: center;
    margin-bottom: -2rem;
}
.valeur .valeur-img{
    flex: 1;
    border-radius: 3rem 0 3rem;
    overflow: hidden;
    text-align: right;
}
.valeur .valeur-img img{
    max-width: 100%;
    display: block;
    margin-left: 57px;
    height: 370px;
    width: 600px;
}
.valeur .valeur-txt{
    flex: 1;
    padding: 0 2rem;
    text-align: left;
}
.valeur .valeur-txt p{
    font-size: 17px;
    margin: 1rem 0;
    line-height: 1.6; /* Ajout d'espace entre les lignes */
    font-family: 'Helvetica Neue', Arial, sans-serif; /* Police moderne */
    color: #333; /* Couleur de texte moderne */
}



/*------------À propos de nous page---------------*/
.sub-header{
    height: 1vh; /* Réduit de 30vh à 15vh (50% de réduction) */
    width: 100%;
    padding-top: 0.7%; /* Réduit proportionnellement */
    
    background-image: linear-gradient(rgba(4, 9, 30, 0.533),rgba(4, 9, 30, 0.188)),url(images/4bois24.jpeg);
    background-position: center;
    background-size: cover;
    text-align: center;
    color: #fff;
}
.sub-header img{
    width: 160px;
    height: 50px;
}

.aboutUs{
    width: 70%;
    margin: auto;
    text-align: center;
    justify-content: center;
    padding-top: 40px;
    padding-right: 5%;
}
.about-col{
    flex-basis: 40%;
    border-radius: 10px;
    margin-bottom: 5%;
    text-align: left;
}
.about-col img{
    width: 110%;
    height: 300px;
    border-radius: 10px;
}
.about-col p{
    padding: 0;
} 
.bout-col h1{
    margin-top: 16px;
    margin-bottom: 15px;
    text-align: left;
}
.aboutUs .row{
    margin-top: 0%;
    display: flex;
    justify-content: space-between;
}
/*------READ MORE-------*/
.extra{
    display: none;
}
input[type="checkbox"]{
    height: 2em;
    display: block;
    appearance: none;
}
.label-btn1, .label-btn2{
    position: relative;
    padding: 1em;
    background-color: #fe0000;
    color: #ffffff;
    cursor: pointer;
}
.label-btn1:before,.label-btn2:before{
    content:"En savoir plus";
}
input[type="checkbox"]:checked ~ .label-btn1:before, input[type="checkbox"]:checked ~.label-btn2:before{
    content:"En savoir moins";
}
.dots:has(~ input[type="checkbox"]:checked){
    display: none;
}
.extra.dots:has(~ input[type="checkbox"]:checked){
    display: inline;
}
.extra:has(~ input[type="checkbox"]:checked){
    display: inline;
}
/* Style pour le bouton toggle */
.toggle-btn {
    background-color: #fe0000;
    color: #ffffff;
    padding: 1em;
    cursor: pointer;
    border: none;
    outline: none;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
}
.toggle-btn:before {
    content: "En savoir plus";
}
input[type="checkbox"]:checked ~ .toggle-btn:before {
    content: "En savoir moins";
}

/*------------Produits page-----------*/
.btn-panier {
    background-color: #5fa9cdff; /* Bleu bébé */
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.btn-panier:hover {
    background-color: #568facff; /* Un bleu bébé légèrement plus foncé au survol */
}
.produits{
    width: 80%;
    margin: auto;
    text-align: center;
    padding-top: 0px;
}
.produits .row{
    display: flex;
    flex-wrap: wrap;
    justify-content: center; /* centre les colonnes */
    gap: 30px; /* espace entre les colonnes */
    margin-top: 25px;
}
.produits-col,
.produits-col1,
.produits-col2,
.produits-col3,
.produits-col4,
.produits-col5 {
    flex: 0 1 calc(33.333% - 30px); /* 3 colonnes par ligne avec espace */
    box-sizing: border-box;
    border-radius: 10px;
    margin-bottom: 30px;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.produits-col img,
.produits-col1 img,
.produits-col2 img,
.produits-col3 img,
.produits-col4 img,
.produits-col5 img {
    width: 95%;
    height: 200px;
}
.produits-col .rear-img,
.produits-col1 .rear-img1,
.produits-col2 .rear-img2,
.produits-col3 .rear-img3,
.produits-col4 .rear-img4,
.produits-col5 .rear-img5
{
    opacity: 0;
    position: absolute;
    top: 0;
    left: 10px;
    z-index: -1;
    transition: opacity 0.4s ease-out;
}
.produits-col1:hover .rear-img1,
.produits-col:hover .rear-img,
.produits-col2:hover .rear-img2,
.produits-col3:hover .rear-img3,
.produits-col4:hover .rear-img4,
.produits-col5:hover .rear-img5
{
    opacity: 1;
    z-index: 0;
}
.layer{
    background: rgba(226,0,0,0.7);
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
}
.dropdown {
    position: relative;
    display: inline-block;
}
/*----------Panier page---------*/
.btn {
    display: inline-block;
    padding: 6px 10px;
    margin: 0 3px;
    border-radius: 6px;
    font-size: 14px;
    text-decoration: none;
    color: white;
    cursor: pointer;
    transition: background-color 0.2s ease;
}

.btn-sm {
    font-size: 12px;
    padding: 4px 8px;
}

.btn-outline-success {
    background-color: #28a745;
}

.btn-outline-warning {
    background-color: #ffc107;
    color: black;
}

.btn-outline-danger {
    background-color: #dc3545;
}

.btn:hover {
    opacity: 0.85;
}

/* Pour centrer les icônes à l’intérieur */
.btn i {
    margin: 0;
    pointer-events: none;
}
.table th {
    background-color: #b3c9dfff; 
}

table {
    border-collapse: collapse;
    width: 90%;
    margin-top: 30px;    
    margin-bottom: 30px; 
    margin-left: auto;
    margin-right: auto;
}

table, th, td {
    border: 1px solid #d3d7dbff; 
}

th, td {
    padding: 12px 15px;
    text-align: left;
}

tr:nth-child(even) {
    background-color: #f2f2f2; 
}

tr:hover {
    background-color: #e9ecef; 
}

.table-bordered {
    border: 2px solid #343a40; 
}

/*----------Contactez-nous page---------*/
.localistaion{
    width: 80%;
    margin: auto;
    margin-top: 20%;
    display: flex;
    justify-content: center;
}
.localisation iframe{
    margin-top: -140px;
    padding-top: 5%;
    padding-left: 10%;
    width: 80%;
}
.body .section-header{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: 'Poppins',sans-serif;
}
.body {
   display: flex;
   flex-direction: column;
   min-height: 100vh;
}

section{
    position: relative;
    z-index: 3;
    padding-top: 28px;
    padding-bottom: 50px;

}

