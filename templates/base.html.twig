    margin-top: auto;
    background-color: #1d1936;  /*#9e8163;*/
    padding: 2px 0;
    text-align: center;
    width: 100%;
}
.footer-content {
    display: flex;
    flex-direction: row; /* Changement clé : de column à row */
    align-items: center; /* Centre verticalement les éléments */
