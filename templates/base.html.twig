  }
  
  .contact-form .input-box input[type="submit"]
  {
    width: 100%;
    background: #b2642e;
    color: #FFF;
    border: none;
    cursor: pointer;
    padding: 10px;
    font-size: 18px;
    border: 1px solid #b2642e;
    transition: 0.5s;
  }
  .contact-form .input-box input[type="submit"]:hover
  {
    background: #bb7a4b;
    color: #fff;
  }
 

/*----------FIN DE CHAQUE PAGE----------*/
